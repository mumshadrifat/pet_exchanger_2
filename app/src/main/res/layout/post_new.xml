<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/voo">



    <Button

        android:id="@+id/chooseButtonId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4b004b"
        android:textColor="#f6c126"
        android:text="Select From gallery"
        />
    <EditText
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/captionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Dog/cat/Bird"
        android:layout_marginBottom="20dp"
   android:textColor="#000000"
        android:background="#f6c126"
        android:textSize="39sp"
        />

    <ImageView

        android:id="@+id/imageid"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="10dp"
        android:background="#f6c126" />

    <EditText
        android:paddingLeft="10dp"
      android:textSize="20sp"
     android:background="#f6c126"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        android:id="@+id/descriptionId"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="description of your pet"
        />

    <EditText
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"

        android:background="#f6c126"
        android:id="@+id/addressId"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Adress "

        />

    <EditText
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:layout_marginTop="25dp"
        android:background="#f6c126"
        android:id="@+id/phoneId"
        android:layout_below="@+id/descriptionId"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Phone number "
        android:layout_marginBottom="10dp"
        />


    <EditText
        android:paddingLeft="10dp"

        android:layout_marginTop="10dp"
        android:background="#f6c126"
        android:id="@+id/priceId"
        android:layout_width="350dp"
        android:layout_height="wrap_content"


        android:hint="price"
        android:layout_marginBottom="20dp"

        />


    <Button
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/saveButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#4b004b"
        android:text="Save"
        android:textColor="#f6c126"


        />

    <Button
          android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/displayButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="#4b004b"
        android:text="Display"
        android:textColor="#f6c126"
        />



    <ProgressBar
        android:id="@+id/prgressId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        />



</LinearLayout>